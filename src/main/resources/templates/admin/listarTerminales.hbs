{{#partial "contenido"}}

<div class="row">
<h1>Terminales</h1>
</div>

<form action="/terminales" method="GET">

  <div class="form-group">
	<label for="nombre">Nombre</label>
	<input class="form-control" type="text" placeholder="Ej: 114" id="nombre" name="nombre"/>
  </div>

  <div class="form-group">
  	<label for="comuna">Comuna</label>
	<select class="form-control" name="comuna" id="comuna">
		{{#each comunas}}
		<option value={{nombre}}>{{nombre}}</option>
		{{/each}}
	</select>
  </div>

  <button class="btn btn-primary" type="submit">Buscar</button>

</form>

{{#if Terminales}}
<table class="table table-stripped">
	<thead>
	<tr>
		<th>Nombre</th>
		<th>Comuna</th>
		<th> </th>
		<th> </th>
		<th> </th>
	</tr>
	</thead>
	<tbody>
	{{#each Terminales}}
		<tr>
			<td>{{nombre}}</td>
			<td>{{comuna.nombre}}</td>
			<td><a href="/terminales/{{id}}/acciones">Acciones</a></td>
			<td><a href="/terminales/{{id}}/modificar">Editar</a></td>
			<td><a href="/terminales/{{id}}/eliminar">Eliminar</a></td>
		</tr>
	{{else}}
		<tr>
		<td colspan="5">
		</td>
		</tr>
	{{/each}}
	</tbody>
</table>
{{else}}
	<div class="alert alert-info" role="alert">No se encontraron resultados.</div>
{{/if}}

<form action="/terminales/agregar" method="GET">
	<input class="btn btn-default" type="submit" value="Nueva terminal">
</form>

{{/partial}}

{{>layoutAdmin.hbs}}