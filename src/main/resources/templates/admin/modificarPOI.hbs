{{#partial "contenido"}}
	{{#with poi}}
	<form action="/pois/{{id}}/modificar" method="POST">
		
		<div class="form-group">
			<label for="nombre">Nombre</label>
			<input type="text" value="{{nombre}}" name="nombre">
		</div>
	
		<div class="form-group">		
			<label for="calle">Calle</label>
			<input type="text" value="{{getCalle direccion}}" name="calle">
		</div>
		<div class="form-group">		
			<label for="numero">Altura</label>
			<input type="number" value="{{getNumero direccion}}" name="numero">
		</div>
		<div class="form-group">		
			<label for="barrio">Barrio</label>
			<input type="text" value="{{getBarrio direccion}}" name="barrio">
		</div>
		<table><tr>
		<input class="btn btn-primary btn-sm" type="submit" value="Guardar" style="height:40px; width:100px"></tr>
		<tr><input class="btn btn-default btn-sm" onClick="parent.location='/pois'" value="Cancelar" style="height:40px; width:100px"></tr>
		</table>
	</form>
	{{/with}}
{{/partial}}

{{>layoutAdmin.hbs}}