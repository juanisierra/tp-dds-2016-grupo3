{{#partial "contenido"}}
	

	<div class="col-lg-4">
	{{#if terminal}}
	<form action="/terminales/{{terminal.id}}/modificar" method="POST">
	{{else}}
	<form action="/terminales" method="POST">
	{{/if}}
		<div class="form-group">
			<label for="nombre">Nombre</label>
			<input class="form-control" type="text" {{#if terminal}} value="{{terminal.nombre}}"{{/if}} id="nombre" name="nombre">
		</div>

		<div class="form-group">
			<label for="comuna">Comuna</label>
			<select class="form-control" placeholder="Comuna" id="comuna" name="comuna">
			{{#each comunas}}
			<option value={{nombre}}>{{nombre}}</option>
			{{/each}}
			</select>
		</div>
		
		<button class="btn btn-primary" type="submit">Guardar</button>
		<a class="btn btn-default" href="/terminales">Cancelar</a>
	  </form>
	  </div>
{{/partial}}

{{>layoutAdmin.hbs}}