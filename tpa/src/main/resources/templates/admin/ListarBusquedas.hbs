{{#partial "contenido"}}
<h1>Busquedas</h1>
<form action="/busquedas" method="GET">

		<div class="form-group">
			<label for="terminal">Terminal</label>
			<input type="text" placeholder="Nombre" name="terminal">
			<label for="cantResultados">Cantidad resultados</label>
			<input type="text" placeholder="cantidad" name="cantResultados">
		</div>
		<table> 
		<tr><input class="btn btn-primary btn-lg" type="submit" value="Buscar"></tr>
		</table>
	</form>
</div>

<table class="table table-stripped">
	<tr>
		<th>Criterio</th>
		<th>Cantidad de Resultados</th>
		<th>Terminal</th>
		<th>Demora (seg)</th>
		<th>Fecha</th>
		<th>Resultados</th>
	</tr>

	{{#each busquedas}}
		<tr>
			<td>{{criterio}}</td>
			<td>{{cantResultados}}</td>
			<td>{{terminal.nombre}}</td>
			<td>{{tiempoDemorado}}</td>
			<td>{{fecha}}</td>
			<td><a href="/busquedas/verPois/{{id}}">Ver</a><td>
		</tr>
	{{/each}}
</table>
{{/partial}}

