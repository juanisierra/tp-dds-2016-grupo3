{{#partial "contenido"}}
<h1>POIS</h1>
<form action="/pois" method="GET">

		<div class="form-group">
			<label for="criterio">Nombre</label>
			<input type="text" placeholder="Nombre" name="criterio">
		</div>
		<div class="form-group">
			<label for="tipos">Tipos</label>
			<select name="tipos">
			<option value="">Todos</option>
  			<option value="Banco">Banco</option>
  			<option value="CGP">CGP</option>
  				<option value="LocalComercial">Local Comercial</option>
  				<option value="ParadaColectivo">Parada de Colectivo</option>
			</select>
		</div>
		<input class="btn btn-primary btn-lg" type="submit" value="Buscar">
	</form>
</div>

<table class="table table-stripped">
	<tr>
		<th>Nombre</th>
		<th>Direccion</th>
		<th>Posicion X</th>
    	<th>Posicion Y</th>
		<th>   </th>
		<th>   </th>
		<th>   </th>
	</tr>

	{{#each pois}}
		<tr>
			<td>{{nombre}}</td>
			<td>{{mostrarDir direccion}}</td>
			<td>{{x}}</td>
      <td>{{y}}</td>
			<td><a href="{{url}}">Ver</a><td>
			<td><a href="{{url}}">Editar</a><td>
			<td><a href="{{url}}">Eliminar</a><td>
		</tr>
	{{/each}}
</table>
{{/partial}}

