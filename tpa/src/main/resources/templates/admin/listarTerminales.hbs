{{#partial "contenido"}}
<h1>TERMINALES</h1>
<form action="/terminales" method="GET">

		<div class="form-group">
			<label for="nombre">Nombre</label>
			<input type="text" placeholder="Nombre" name="nombre">
		</div>
		
		<div class="form-group">
			<label for="Comuna">Comuna</label>
			<select placeholder="Comuna" name="comuna">
				{{#each comunas}}
				<option value={{nombre}}>{{nombre}}</option>
				{{/each}}
			</select>
		</div>

		<table> 
		<tr><input class="btn btn-primary btn-lg" type="submit" value="Buscar"></tr>
		</table>
	</form>
	
<form action="/terminales/agregar" method="GET">

		<table> 
		<tr><input class="btn btn-primary btn-lg" type="submit" value="Nueva terminal"></tr>
		</table>
	</form>
</div>

<table class="table table-stripped">
	<tr>
		<th>Nombre</th>
		<th>Comuna</th>
	</tr>

	{{#each Terminales}}
		<tr>
			<td>{{nombre}}</td>
			<td>{{comuna.nombre}}</td>
			<td><a href="/terminales/ver/{{id}}">Ver</a><td>
			<td><a href="/terminales/modificar/{{id}}">Editar</a><td>
			<td><a href="/terminales/eliminar/{{id}}">Eliminar</a><td>
		</tr>
	{{/each}}
</table>
{{/partial}}

{{>layoutAdmin.hbs}}